<%= render "shared/banner" %><br>


<div class>
<table class="table table-hover">
 <thead class="thead-dark">
  <tr>
    <th scope="col">Symbol</th> 
    <th scope="col">Company name</th>
    <th scope="col">CEO</th>
    <th scope="col">Price</th>
  </tr>
  </thead>

   <tr>
      <td class="desc"><h6><%= @parameter %></h6></td>
      <td class="desc"><h6><%= @company %></h6></td>
      <td class="desc"><h6><%=@ceo%></h6></td>
       <td class="desc"><h6><%=@quote%></h6></td>

    </tr>

</table>

<% if @role_name === "Broker" %>
  <%= form_with model:  @transaction, local: true do |form| %>

<h1 class="text-muted">Add Stock</h1>

    <%=form.label :stock_code%> : <br>
    <%=form.text_field :stock_code,  value:   @parameter, readonly:true, class: "form-control" %>

    <%=form.label :price%> :<br>
    <%=form.text_field :price, value: @quote,readonly:true, class: "form-control" %><br>

     <%=form.label :quantity%> :<br>
    <%=form.text_field :quantity, class: "form-control" %><br>

   
    </div>
   <div class="col text-center">
        <%= form.submit :Add, class: "btn btn-success"%>
    </div>
<%end%>

<% else %>

<%= form_with model:  @transaction, local: true do |form| %>

<h1 class="text-muted">Buy Stock</h1>

    <%=form.label :stock_code%> : <br>
    <%=form.text_field :stock_code,  value:   @parameter, readonly:true, class: "form-control" %>

    <%=form.label :price%> :<br>
    <%=form.text_field :price, value: @quote,readonly:true, class: "form-control" %><br>

     <%=form.label :quantity%> :<br>
    <%=form.text_field :quantity, class: "form-control" %><br>

   
    </div>
   <div class="col text-center">
        <%= form.submit :Buy, class: "btn btn-success"%>
    </div>
<%end%>
<% end %>
