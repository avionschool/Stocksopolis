<%= render "shared/banner" %><br>

<h1 class="text-muted">My Portfolio</h1>

 <table class="table">
            <thead>
                <tr >
                <th scope="col">Ticker Symbol</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total Cost</th>
                </tr>
            </thead>
            <tbody>
           <% @stocks.each do |stock|%>
                <%if @user_stock%>
                <tr>
                <td><%=stock.symbol%></td> 
                <td><%=stock.stock_quantity%></td>
                <td><%=@client_index.quote(stock.symbol).latest_price%></td>
                <td><%=@client_index.quote(stock.symbol).latest_price*stock.stock_quantity%></td>
                </tr>
                <% end %>
            <% end %>
            </tbody>

            </table>
         
